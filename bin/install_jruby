#!/bin/sh

dir=`dirname $0`
. $dir/constants.sh

mkdir -p $VENDOR
if [ -f $JRUBY_INSTALLATION ] ; then
  echo "jruby exists"
else
  echo "downloading jruby"
  pushd $VENDOR > /dev/null
  wget $JRUBY_COMPLETE_URL
  mv $JRUBY_COMPLETE_JAR $JRUBY_JAR
  popd > /dev/null

  ./$dir/jruby -S gem install -r bundler
fi
