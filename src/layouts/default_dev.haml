!!!

%head
  %title CompassApp Dev


  = stylesheets
  %link{:href => "stylesheets/screen.css", :rel => "stylesheet"}/
  %script{:src => "js/vendor/AIRAliases.js", :type => "text/javascript"}
  %script{:src => "js/vendor/AIRIntrospector.js", :type => "text/javascript"}
  %script{:src => "js/vendor/jquery-1.5.min.js", :type => "text/javascript"}
  %script{:src => "js/vendor/jquery.tmpl.min.js", :type => "text/javascript"}
  %script{:src => "js/vendor/adaptors/LawnchairAdaptorHelpers.js", :type => "text/javascript"}
  %script{:src => "js/vendor/adaptors/AIRSqliteAdaptor.js", :type => "text/javascript"}
  %script{:src => "js/vendor/Lawnchair.js", :type => "text/javascript"}
  %script{:src => "js/app/application.js", :type => "text/javascript"}
  %script{:src => "js/app/process_interaction.js", :type => "text/javascript"}


  = yield
  %script#colorize_template{:type => "text/x-jquery-tmpl"}

    %div
      %span{:class => "${color}"} ${string}


  %script#project_template{:type => "text/x-jquery-tmpl"}

    %li.project.stopped{"data-key" => "${key}"}
      .item
        .source
          %h2
            %a{:href => "#"} ${name}
        .commands
          %button.command.start 
            %span Start
          %button.command.stop 
            %span Stop


  %script#project_details_template{:type => "text/x-jquery-tmpl"}

    .pane.project_details.configure{"data-key" => "${key}"}
      .view
        .modes
          %a.mode.log{:href => "#"} Log
          %a.mode.configure{:href => "#"} Configure
        .log_output
        .option_container
          %h2 Configuration
          .options
            .option.input
              %label{:for => "sass_input"} Input Folder:
              %button.dir_find.select_sass_dir
                %span Choose
              %input#sass_input.setting.sass_dir{:value => "${sassDir}"}/
            .option.output
              %label{:for => "css_input"} Output Folder:
              %button.dir_find.select_css_dir
                %span Choose
              %input#css_input.setting.css_dir{:value => "${cssDir}"}/
            .option.remove
              %label Remove Project:
              %button.delete
                %span Remove
      .footer


%body
  #header
    %h1 CompassApp

  .pane.project_list
    .view
      %ul.projects

        / remove
        %li.project.selected{"data-key" => "${key}"}
          .item
            .source
              %h2
                %a{:href => "#"} ${name}
            .commands
              %button.command.start 
                %span Start
              %button.command.stop 
                %span Stop

        %li.project.playing{"data-key" => "${key}"}
          .item
            .source
              %h2
                %a{:href => "#"} ${name}
            .commands
              %button.command.start 
                %span Start
              %button.command.stop 
                %span Stop

        %li.project.stopped{"data-key" => "${key}"}
          .item
            .source
              %h2
                %a{:href => "#"} ${name}
            .commands
              %button.command.start 
                %span Start
              %button.command.stop 
                %span Stop
        /END remove


      %button#nuke Remove All Projects

    .footer
      %a.option.add{:href => "#", :title => "Add a project"}
        %span +
      .splitter |||

  .pane.project_details.configure{"data-key" => "${key}"}
    .view
      .modes
        %a.mode.log{:href => "#"} Log
        %a.mode.configure{:href => "#"} Configure
      .log_output

      .option_container
        %h2 Configuration

        .options

          .option_group.stylesheet_directories
            %h3 Stylesheet Directories
            .notice
              %em*Required field
            
            .option.input
              %label{:for => "sass_input"} Input Folder:
              %button.dir_find.select_sass_dir
                %span Choose
              %input#sass_input.setting.sass_dir{:value => "${sassDir}"}/
              %em *

            .option.output
              %label{:for => "css_input"} Output Folder:
              %button.dir_find.select_css_dir
                %span Choose
              %input#css_input.setting.css_dir{:value => "${cssDir}"}/
              %em *

          .option_group
            %h3 Other Directories
            .option.javascripts_dir
              %label{:for => "js_input"} JavaScripts Folder:
              %button.dir_find.select_javascripts_dir
                %span Choose
              %input#js_input.setting.javascripts_dir{:value => "${javascriptsDir}"}/

            .option.images_dir
              %label{:for => "images"} Images Folder:
              %button.dir_find.select_images_dir
                %span Choose
              %input#images.setting.images_dir{:value => "${imagesDir}"}/

          .option_group
            %h3 Manage Project
            .option.remove
              %label Remove Project:
              %button.delete
                %span Remove
    .footer

  .pane.non_selected
    .view
    .footer